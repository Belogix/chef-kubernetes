{
    "cniVersion": "0.3.0",
    "name": "weave",
    "plugins": [
        {
            "name": "weave",
            "type": "weave-net",
            "hairpinMode": true
        },
        {
            "type": "portmap",
            "capabilities": {
                "portMappings": true
            },
            "snat": true
	    <% if node['kubernetes']['proxy']['mode'] == 'ipvs' %>
	    ,"conditionsV4": [
                "!", "-d", "<%= node['kubernetes']['api']['service_cluster_ip_range'] %>"
            ]
	    <% end %>
        }
    ]
}
