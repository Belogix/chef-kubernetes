apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  namespace: kube-system
  generation: 1
  labels:
    app: kubernetes-dashboard
    version: <%= node[:kubernetes][:dashboard][:version] %>
    kubernetes.io/cluster-service: "true"
  name: kubernetes-dashboard
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kubernetes-dashboard
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: kubernetes-dashboard
        version: <%= node[:kubernetes][:dashboard][:version] %>
    spec:
      containers:
      - command:
        - /dashboard
        - --apiserver-host=https://kubernetes.default.svc.<%= node[:kubernetes][:cluster_domain] %>:8443
        env:
        - name: KUBECONFIG
          value: /etc/kubernetes/kubeconfig.yaml
        image: gcr.io/google_containers/kubernetes-dashboard-amd64:<%= node[:kubernetes][:dashboard][:version] %>
        imagePullPolicy: Always
        livenessProbe:
          failureThreshold: 3
          httpGet:
            path: /
            port: 9090
            scheme: HTTP
          initialDelaySeconds: 30
          periodSeconds: 10
          successThreshold: 1
          timeoutSeconds: 30
        name: kubernetes-dashboard
        ports:
        - containerPort: 9090
          protocol: TCP
        volumeMounts:
        - mountPath: /etc/kubernetes/ssl
          name: ssl-certs-kubernetes
          readOnly: true
        - mountPath: /etc/kubernetes/kubeconfig.yaml
          name: kubeconfig
          readOnly: true
      dnsPolicy: ClusterFirst
      nodeSelector:
        kube-role: master
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      volumes:
      - hostPath:
          path: /etc/kubernetes/ssl
        name: ssl-certs-kubernetes
      - hostPath:
          path: /etc/kubernetes/kubeconfig.yaml
        name: kubeconfig
