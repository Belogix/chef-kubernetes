apiVersion: v1
kind: Pod
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: <%= node['kubernetes']['image'] %>:<%=node['kubernetes']['version'] %>
    command:
    - /hyperkube
    - scheduler
    - --address=$(LISTEN_ON)
    - --leader-elect=true
    - --master=http://127.0.0.1:<%= node['kubernetes']['api']['insecure_port'] %>
    - --machine-id-file=/var/lib/dbus/machine-id
    livenessProbe:
      httpGet:
        path: /healthz
        port: 10251
      initialDelaySeconds: 15
    readinessProbe:
      httpGet:
        path: /healthz
        port: 10251
      initialDelaySeconds: 15
    env:
      - name: LISTEN_ON
        valueFrom:
          fieldRef:
            apiVersion: v1
            fieldPath: spec.nodeName
    volumeMounts:
    - mountPath: /var/lib/dbus/machine-id
      name: machine-id
      readOnly: true
  volumes:
  - hostPath:
      path: /var/lib/dbus/machine-id
    name: machine-id
