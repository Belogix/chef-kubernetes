apiVersion: v1
kind: Pod
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: <%= node[:kubernetes][:image] %>:<%=node[:kubernetes][:version] %>
    command:
    - /hyperkube
    - scheduler
    - --leader-elect=true
    - --docker=<%= node[:kubernetes][:docker] %>
    - --kubeconfig=/etc/kubernetes/kubeconfig.yaml
    - --log-dir=/var/log/kubernetes
    - --machine-id-file=/var/lib/dbus/machine-id
    env:
      - name: ADDRESS
        valueFrom:
          fieldRef:
            apiVersion: v1
            fieldPath: spec.nodeName
    livenessProbe:
      httpGet:
        path: /healthz
        port: 10251
      initialDelaySeconds: 15
    readinessProbe:
      httpGet:
        path: /healthz
        port: 10251
      initialDelaySeconds: 15
    volumeMounts:
    - mountPath: /var/lib/dbus/machine-id
      name: machine-id
      readOnly: true
  volumes:
  - hostPath:
      path: /var/lib/dbus/machine-id
    name: machine-id
